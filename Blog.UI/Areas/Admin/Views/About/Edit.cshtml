@model  AboutViewModel
@{
    ViewBag.AdminTitle = "Hakkımda Düzenleme Ekranı";
}
@section customAdminScript
{  <!--Validaiton içim post etmeden hatayı göstersin-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
}


@using (Html.BeginForm("Edit", "About", FormMethod.Post))

{   
    @Html.HiddenFor(i=>i.Id)  <!--id almak zorundayız çünkü hangi id post edeceksin-->
    <div class="form-group">
        <div class="row">
            @Html.ValidationSummary("", new { @class = "text-danger" })   <!--hataları toplu gösteriyor-->
        </div>
        <div class="row">
            <div class="col-2">
                @*<label>Başlık</label>*@
                @Html.DisplayNameFor(i => i.Title)
            </div>
            <div class="col">
                @*<input type="text" class="form-control" value="@Model.TitleName" />*@
                @Html.TextBoxFor(model => model.Title, new { @class = "form-control", placeholder = "Başlık giriniz" })
                @Html.ValidationMessageFor(i => i.Title, "", new { @class = "text-danger" })

            </div>

        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-2">
                @*<label>İçerik</label>*@
                @Html.LabelFor(i => i.Description)   <!--label içerisinde döndürür daha doğru-->
            </div>
            <div class="col">
                @*<input type="text" class="form-control" />*@
                @Html.EditorFor(model => model.Description, new
           { htmlAttributes = new { @class = "form-control", placeholder = "İçerik giriniz", required = "required" } })
                @Html.ValidationMessageFor(i => i.Description, "", new { @class = "text-danger" })
            </div>

        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Düzenle" class="btn btn-info" />
    </div>


}
