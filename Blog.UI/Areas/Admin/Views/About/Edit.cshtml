@model  AboutViewModel


@{
    ViewBag.AdminTitle = "Hakkımda Düzenleme Ekranı";
}

@using (Html.BeginForm("Edit", "About", FormMethod.Post))
{
    <div class="form-group">
        <div class="row">
            @Html.ValidationSummary()
        </div>
        <div class="row">
            <div class="col-2">
                @*<label>Başlık</label>*@
                @Html.DisplayNameFor(i => i.Title)
            </div>
            <div class="col">
                @*<input type="text" class="form-control" value="@Model.TitleName" />*@
                @Html.TextBoxFor(model => model.Title, new { @class = "form-control", placeholder = "Başlık giriniz", required = "required" })
                @Html.ValidationMessageFor(i => i.Title, "", new { @class = "text-danger" })
                @Html.ValidationMessageFor(i => i.Description, "", new { @class = "text-danger" })
            </div>

        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-2">
                @*<label>İçerik</label>*@
                @Html.LabelFor(i => i.Description)   <!--label içerisinde döndürür daha doğru-->
            </div>
            <div class="col">
                @*<input type="text" class="form-control" />*@
                @Html.EditorFor(model => model.Description, new
           { htmlAttributes = new { @class = "form-control", placeholder = "İçerik giriniz" } })
            </div>

        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Düzenle" class="btn btn-info" />
    </div>
   

}
